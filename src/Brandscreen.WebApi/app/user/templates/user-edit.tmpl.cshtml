<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Roles</h3>
    </div>

    <div class="panel-body">
        <form name="roleForm" class="form-inline">
            <div class="form-inline">
                <div class="form-group" ng-class="{'has-error': roleForm.role.$dirty && roleForm.role.$invalid}">
                    <div class="input-group">
                        <input name="role" type="text" class="form-control" placeholder="Role" ng-model="vm.newRole" ng-required="true">
                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li ng-repeat="role in vm.roleList" ng-click="vm.newRole = role">
                                    <a href="javascript:void(0)">{{role}}</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <button type="button" class="btn btn-default" ng-disabled="roleForm.$invalid" ng-click="vm.addRole(vm.newRole)">Add</button>
            </div>
        </form>
    </div>

    <ul class="list-group">
        <li class="list-group-item" ng-repeat="role in vm.user.roles">
            {{role}}
            <button type="button" class="close pull-right" aria-label="Close" ng-click="vm.removeRole(role)">
                <span aria-hidden="true">&times;</span>
            </button>
        </li>
    </ul>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Claims</h3>
    </div>

    <div class="panel-body">
        <form name="claimForm" class="form-inline">
            <div class="form-group" ng-class="{'has-error': claimForm.claimType.$dirty && claimForm.claimType.$invalid}">
                <div class="input-group">
                    <input name="claimType" type="text" class="form-control" placeholder="Type" ng-model="vm.newClaim.type" ng-required="true">
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li ng-repeat="claim in vm.claimList" ng-click="vm.newClaim.type = claim">
                                <a href="javascript:void(0)">{{claim}}</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="form-group" ng-class="{'has-error': claimForm.claimValue.$dirty && claimForm.claimValue.$invalid}">
                <input name="claimValue" type="text" class="form-control" placeholder="Value" ng-model="vm.newClaim.value" ng-required="true">
            </div>

            <button type="button" class="btn btn-default" ng-disabled="claimForm.$invalid"  ng-click="vm.addClaim(vm.newClaim)">Add</button>
        </form>
    </div>

    <ul class="list-group">
        <li class="list-group-item" ng-repeat="claim in vm.user.claims">
            {{claim.type}} = {{claim.value}}
            <button type="button" class="close pull-right" aria-label="Close" ng-click="vm.removeClaim(claim)">
                <span aria-hidden="true">&times;</span>
            </button>
        </li>
    </ul>
</div>

<div>
    <button type="button" class="btn btn-primary" ng-click="vm.save()">Save</button>
    <button type="button" class="btn btn-danger" ng-click="vm.cancel()">Cancel</button>
</div>